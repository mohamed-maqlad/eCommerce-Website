<%- include('partes/header.ejs')%> 
<%- include('partes/nav.ejs')%>
<div class="container">
    <div class="row">
        <div class="col-xl-7 m-auto">
            <% if( error.length > 0 ) { %>
                <p class="alert alert-danger"><%= error[0] %></p>
                <% } %>
      
                <% if( success.length > 0 ) { %>
                  <p class="alert alert-success"><%= success[0] %></p>
                  <% } %>
                  <h3 class="text-center">Update Product</h3>
            <form action="/manageprodect/update" method="post">
              <input type="hidden" name="productid" value="/manageprodect/update/<%= product._id %>">
                <input type="hidden" value="<%= product._id %>" name="id">
                <div class="mb-3">
                  <label class="form-label">Name</label>
                  <input type="text" class="form-control" name="name" placeholder="Enter new name">
                </div>
                <div class="mb-3">
                    <label class="form-label">Price</label>
                    <input type="number"  class="form-control" name="price" placeholder="Enter new price">
                  </div>
                <button type="submit" class="btn btn-primary">Update Product</button>
              </form>
        </div>
    </div>
</div>

<%- include('partes//footer.ejs')%>