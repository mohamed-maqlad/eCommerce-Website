<%- include('partes/header.ejs')%> <%- include('partes/nav.ejs')%>

<div class="mb-3">
    <% if( error.length > 0 ) { %>
    <p class="alert alert-danger"><%= error[0] %></p>
    <% } %> <% if( success.length > 0 ) { %>
    <p class="alert alert-success"><%= success[0] %></p>
    <% } %>
  </div>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h3><%= user.name %></h3>
      <img src="/<%= user.image %>" class="img-thumbnail" alt="..." />
      
    </div>
    <div class="col-md-9">
      <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
          <button
            class="nav-link active"
            id="home-tab"
            data-bs-toggle="tab"
            data-bs-target="#home"
            type="button"
            role="tab"
            aria-controls="home"
            aria-selected="true"
          >
            Home
          </button>
        </li>
        <li class="nav-item" role="presentation">
          <button
            class="nav-link"
            id="profile-tab"
            data-bs-toggle="tab"
            data-bs-target="#profile"
            type="button"
            role="tab"
            aria-controls="profile"
            aria-selected="false"
          >
            Update Profile
          </button>
        </li>
        <li class="nav-item" role="presentation">
          <button
            class="nav-link"
            id="contact-tab"
            data-bs-toggle="tab"
            data-bs-target="#contact"
            type="button"
            role="tab"
            aria-controls="contact"
            aria-selected="false"
          >
            Contact
          </button>
        </li>
      </ul>
      <br />
      <div class="tab-content" id="myTabContent">
        <div
          class="tab-pane fade show active"
          id="home"
          role="tabpanel"
          aria-labelledby="home-tab"
        >
          <div class="container">
            <div class="row row-cols-2">
              <div class="col"><p class="fw-bolder">User Name</p></div>
              <div class="col"><p class="fw-normal"><%= user.name %></p></div>
              <div class="col"><p class="fw-bolder">Email</p></div>
              <div class="col"><p class="fw-normal"><%= user.email %></p></div>
              <div class="col"><p class="fw-bolder">contact</p></div>
              <div class="col">
                <p class="fw-normal"><%= user.contact %></p>
              </div>
              <div class="col"><p class="fw-bolder">Address</p></div>
              <div class="col">
                <p class="fw-normal"><%= user.address %></p>
              </div>
              <div class="col"><p class="fw-bolder">password</p></div>
              <div class="col">
                <input
                  type="password"
                  class="fw-normal border-0"
                  value="<%= user.password %> disabled"
                />
              </div>
            </div>
          </div>
        </div>

        <div
          class="tab-pane fade"
          id="profile"
          role="tabpanel"
          aria-labelledby="profile-tab"
        >
          <div class="container">
            <div class="row">
              <div class="col">
                <form action="/profile/update" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label class="form-label"
                          >Name</label
                        >
                        <input
                          type="text"
                          class="form-control"
                          name="name"
                        />
                      </div>
                      <div class="mb-3">
                        <label class="form-label"
                          >Email address</label
                        >
                        <input
                          type="email"
                          class="form-control"
                          name="email"
                        />
                      </div>
                  <div class="mb-3">
                    <label class="form-label"
                      >contact</label
                    >
                    <input
                      type="number"
                      class="form-control"
                      name="contact"
                    />
                  </div>
                  <div class="mb-3">
                    <label class="form-label"
                      >Address</label
                    >
                    <input
                      type="text"
                      class="form-control"
                      name="address"
                    />
                  </div>
                  <div class="mb-3">
                    <label class="form-label"
                      >Password</label
                    >
                    <input
                      type="password"
                      class="form-control"
                      name="password"
                    
                    />
                  </div>
                  <div class="mb-3">
                    <label class="form-label"
                      >choose imge</label
                    >
                    <input type="file" class="form-control" name="image" />
                  </div>
                  
                  <button type="submit" class="btn btn-primary">Update</button>
                </form>
              </div>
            </div>
          </div>
        </div>
        <div
          class="tab-pane fade"
          id="contact"
          role="tabpanel"
          aria-labelledby="contact-tab"
        >
          ...
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('partes//footer.ejs')%>
