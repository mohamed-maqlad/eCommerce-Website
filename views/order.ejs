<%- include('partes/header.ejs')%> <%- include('partes/nav.ejs')%>

<div class="container">
  <div class="row">
    <div class="col text-center">
      <h2>Your order</h1>
        <% if( success.length > 0 ) { %>
          <p class="alert alert-success"><%= success[0] %></p>
          <% } %>
      <table class="table">
        <thead class="table-dark">
          <tr>
            <th scope="col">No</th>
            <th scope="col">Your email</th>
            <th scope="col">Total amoun</th>
            <th scope="col">Total cost</th>
            <th scope="col">Status</th>
          </tr>
        </thead>
        <tbody>
          <% for(let i = 0 ; i < userOreder.length ; i++) { %>
          <tr>
            <th scope="row"><%= i+1 %></th>
            <td><%= userOreder[i].email %></td>
            <td><%= userOreder[i].totalamount %></td>
            <td><%= userOreder[i].cost %></td>
            <td><%= userOreder[i].status %></td>
          </tr>

        </tbody>
        <% } %>
      </table>
      <!-- <% userOreder.forEach(function(userOreder) { %>
        <%= userOreder.email %>  <%= userOreder.cost %> <%= userOreder.status %>
        
      <% }); %> -->
    </div>
  </div>
</div>

  



